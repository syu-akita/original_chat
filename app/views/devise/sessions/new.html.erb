<div class="overrall">
  <div class="new-wrapper">
    <div class="register-header">
      <h2>ログイン</h2>
    </div>

    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <div class="form-wrap">

      <div class="register-wrap">
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class="form-group-signin">
          <div class="form-text-wrap">
            <label class="form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"input-form", id:"email",autoforcus: true %>
        </div>
        <div class="form-group-signin">
          <div class="form-text-wrap">
            <label class="form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"input-form", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="register-btn">
          <%= f.submit "ログイン", class:"register-blue-btn" %>
        </div>
      </div>
      <% end %>
      <div class="application-text">
        <%= render "devise/shared/application-text" %>
      </div>
    </div>
  </div>
</div>